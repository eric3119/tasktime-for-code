{
  "name": "tasktime-for-code",
  "displayName": "tasktime-for-code",
  "description": "measure time to develop correct code",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/eric3119/tasktime-for-code/"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tasktime-for-code.startTimer",
        "title": "Start Timer",
        "icon": "./src/images/timer-start-svgrepo-com-light.svg"
      },
      {
        "command": "tasktime-for-code.stopTimer",
        "title": "Stop Timer",
        "icon": "./src/images/timer-stop-svgrepo-com-light.svg"
      }
    ],
    "editor/context": [
      {
        "command": "tasktime-for-code.startTimer",
        "when": "editorTextFocus"
      },
      {
        "command": "tasktime-for-code.stopTimer",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tasktime-for-code.startTimer",
          "group": "navigation"
        },
        {
          "command": "tasktime-for-code.stopTimer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}